@page
@model WebApp.Pages.TodosModel
@{
}

<div class="text-center">
    <h1 class="display-4">Your Todo's</h1>

    <div style="height:500px;overflow-y:scroll">
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Completed
                </th>
                <th>
                    Created
                </th>
            </tr>


            @foreach (var todo in Model.TodoModels)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => todo.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(m => todo.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => todo.IsCompleted)
                    </td>
                    <td>
                        @Html.DisplayFor(m => todo.Created)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>